)

func main() {
	client := appwrite.NewClient(
		appwrite.WithProject("<PROJECT_ID>"),                            // Your project ID
		appwrite.WithKey("<API_KEY>"),                                   // Your secret API key
	)

	messaging := appwrite.NewMessaging(client)

	provider, _ := messaging.UpdateTelesignProvider(
		"<PROVIDER_ID>",                                                 // providerId 
		messaging.WithUpdateTelesignProviderName("<NAME>"),              // name (optional)
		messaging.WithUpdateTelesignProviderEnabled(false),              // enabled (optional)
		messaging.WithUpdateTelesignProviderCustomerId("<CUSTOMER_ID>"), // username (optional)
		messaging.WithUpdateTelesignProviderApiKey("<API_KEY>"),         // password (optional)
		messaging.WithUpdateTelesignProviderFrom("<FROM>"),              // from (optional)
	)

	fmt.Println(provider)
}
